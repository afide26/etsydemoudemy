<%= provide(:title, "#{@listing.name}")%>
<div class="container">
<%= render "layouts/flash" %>
<div class="row">
	<div class="col-md-6">
		<div class="thumbnail">
			<%= image_tag @listing.image.url(:large) %> 
		</div>
	</div>
	<div class="col-md-6">
		<h3><%= @listing.name %></h3>
		<h5><%= number_to_currency(@listing.price)%></h5>
		<p><%= @listing.description%></p>
	</div>
</div>
<p>
<% if current_user == @listing.user %>
	<%= link_to "Edit", edit_listing_path(@listing) %> | 
<% end %>
<%= link_to "Back To Listings", listings_path %>
</p>

</div>